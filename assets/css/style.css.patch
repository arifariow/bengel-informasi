    top: 0;
    z-index: 1000;
}

.navbar-brand {
    font-weight: 900;
    font-size: 1.5rem;
    color: #4f46e5 !important;
}

.navbar-nav .nav-link {
    font-weight: 600;
    color: #4b5563 !important;
    margin: 0 0.5rem;
    padding: 0.5rem 1rem !important;
    border-radius: 12px;
    transition: background-color 0.3s ease;
}

.navbar-nav .nav-link.active,
.navbar-nav .nav-link:hover {
    background: #ede9fe;
    color: #4f46e5 !important;
}

.section-title {
    font-size: 2.5rem;
    font-weight: 900;
    color: #1e293b;
    margin-bottom: 0.5rem;
    text-align: center;
}

.section-subtitle {
    font-size: 1.1rem;
    color: #6b7280;
    margin-bottom: 2rem;
    text-align: center;
}

#tips-preview-section {
    background: #f9fafb;
    padding: 3rem 1rem;
}

