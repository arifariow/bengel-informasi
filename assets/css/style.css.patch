    padding: 1.5rem;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.tip-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 36px rgba(0,0,0,0.15);
}

.tip-card .card-header {
    background: linear-gradient(135deg, #4f46e5, #9333ea);
    color: white;
    border-radius: 12px 12px 0 0;
    padding: 1rem;
    font-weight: 700;
    font-size: 1.1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tip-card .card-body {
    padding: 1rem 0;
    color: #4b5563;
    flex-grow: 1;
}

.tip-card .card-text {
    margin-bottom: 1rem;
    line-height: 1.5;
}

.category-badge {
    background: rgba(255,255,255,0.3);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
}

.read-more-btn {
    background: #4f46e5;
    color: white;
    border: none;
    padding: 0.5rem 1.5rem;
    border-radius: 9999px;
    font-weight: 700;
    cursor: pointer;
    transition: background-color 0.3s ease;
    align-self: flex-start;
}

.read-more-btn:hover {
    background: #4338ca;
}

@media (max-width: 768px) {
    .hero-title {
        font-size: 2rem;
    }
    .hero-subtitle {
        font-size: 1rem;
    }
    .hero-stats {
        flex-direction: column;
        gap: 1rem;
        padding: 1rem;
